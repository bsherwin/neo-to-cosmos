{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "totalInstances": {
            "type": "int",
            "defaultValue": 1
        },
        "storageAccountKey": {
            "type": "securestring"
        },
        "shareName": {
            "type": "string"
        }
    },
    "variables": {
        "mountPath": "[concat('/', parameters('shareName'))]"
    },
    "resources": [{
        "name": "[concat(resourceGroup().name, copyIndex())]",
        "type": "Microsoft.ContainerInstance/containerGroups",
        "apiVersion": "2017-10-01-preview",
        "location": "[resourceGroup().location]",
        "copy": {
            "name": "containerGroupCopy",
            "count": "[parameters('totalInstances')]"
        },
        "properties": {
            "containers": [{
                "name": "[concat(resourceGroup().name, copyIndex())]",
                "properties": {
                    "image": "syedhassaanahmed/neo2cosmos",
                    "resources": {
                        "requests": {
                            "cpu": 1,
                            "memoryInGb": 1.5
                        }
                    },
                    "environmentVariables": [{
                            "name": "TOTAL",
                            "value": "[parameters('totalInstances')]"
                        },
                        {
                            "name": "INSTANCE",
                            "value": "[copyIndex()]"
                        },
                        {
                            "name": "CONFIG",
                            "value": "[concat(variables('mountPath'), '/config.json')]"
                        }
                    ],
                    "volumeMounts": [{
                        "name": "config-volume",
                        "mountPath": "[variables('mountPath')]"
                    }]
                }
            }],
            "osType": "Linux",
            "volumes": [{
                "name": "config-volume",
                "azureFile": {
                    "shareName": "[parameters('shareName')]",
                    "storageAccountName": "[resourceGroup().name]",
                    "storageAccountKey": "[parameters('storageAccountKey')]"
                }
            }]
        }
    }]
}